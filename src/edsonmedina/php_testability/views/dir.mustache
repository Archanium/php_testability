{{> partials/header }}

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th>Directory</th>
			<th>Status</th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td><span class="glyphicon glyphicon-folder-open"></span>&nbsp; <a href="../index.html">../</a></td>
			<td>&nbsp;</td>
		</tr>
		
		{{#dirs}}
		<tr>
			<td><span class="glyphicon glyphicon-folder-open"></span>&nbsp; <a href="./{{name}}/index.html">{{name}}/</a></td>
			<td>
				{{#issues}}
				<span class="badge">{{issues}} Issues</span>
				{{/issues}}

				{{^issues}}
				<span class="label label-success">OK</span>
				{{/issues}}
			</td>
		</tr>
		{{/dirs}}

		{{#files}}
		<tr>
			<td><a href="./{{file}}.html">{{file}}</a></td>
			<td>
				{{#issues}}
				<span class="badge">{{issues}} Issues</span>
				{{/issues}}

				{{^issues}}
				<span class="label label-success">OK</span>
				{{/issues}}
			</td>
		</tr>
		{{/files}}

	</tbody>
</table>

{{> partials/footer }}