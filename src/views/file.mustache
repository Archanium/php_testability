{{> partials/header }}

<h4>{{currentPath}} {{#untestable}}<span class="label label-danger">Untestable</span>{{/untestable}}</h4>

<table class="table table-striped table-hover table-condensed">
	<tbody>
		{{#scopes}}
		<tr>
			<td><a href="#{{position}}">{{name}}</a></td>
			<td>
				{{#issues}}
				<a href="#{{position}}" class="btn btn-danger btn-xs" role="button">
				  Issues <span class="badge">{{issues}}</span>
				</a>
				{{/issues}}

				{{^issues}}
				<a href="#{{position}}" class="btn btn-success btn-xs" role="button">Testable</a>
				{{/issues}}
			</td>
		</tr>
		{{/scopes}}
		{{^scopes}}
		<tr class="success">
			<td> No issues </td>
			<td><span class="label label-success">OK</span></td>
		</tr>
		{{/scopes}}
	</tbody>
</table>

{{#lines}}
{{#issues}}
	<span class="label label-danger">
		<a href="https://github.com/edsonmedina/php_testability/wiki/issue.{{type}}"><span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span></a>
		{{type}} {{#name}}({{.}}){{/name}}
	</span> &nbsp;
{{/issues}}
<div class="codeline{{#issues}} bg-danger{{/issues}}"><a name="{{line}}" href="#{{line}}">{{line}}.</a>	{{code}}</div>
{{/lines}}

{{> partials/footer }}
