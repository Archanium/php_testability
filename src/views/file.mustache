{{> partials/header }}

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th>Scopes with issues</th>
			<th>Status</th>
		</tr>
	</thead>
	<tbody>
		{{#scopes}}
		<tr>
			<td><a href="#{{position}}">{{name}}</a></td>
			<td>
				{{#issues}}
				<span class="label label-danger">{{issues}} Issues</span>
				{{/issues}}

				{{^issues}}
				<span class="label label-success">OK</span>
				{{/issues}}
			</td>
		</tr>
		{{/scopes}}
		{{^scopes}}
		<tr class="success">
			<td> No issues </td>
			<td><span class="label label-success">OK</span></td>
		</tr>
		{{/scopes}}
	</tbody>
</table>

{{#lines}}
{{#issues}}
	<span class="label label-danger">{{type}} {{#name}}({{.}}){{/name}}</span>
{{/issues}}
<div class="codeline{{#issues}} bg-danger{{/issues}}"><a name="{{line}}" href="#{{line}}">{{line}}.</a>	{{code}}</div>
{{/lines}}

{{> partials/footer }}