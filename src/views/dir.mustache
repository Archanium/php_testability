{{> partials/header }}

<h4>{{currentPath}} {{#untestable}}<span class="label label-danger">Untestable</span>{{/untestable}}</h4>

<table class="table table-striped table-hover table-condensed">
	<tbody>
		{{^isBaseDir}}
		<tr>
			<td><span class="glyphicon glyphicon-folder-open"></span>&nbsp; <a href="../index.html">../</a></td>
			<td>&nbsp;</td>
		</tr>
		{{/isBaseDir}}
		
		{{#dirs}}
		<tr>
			<td><span class="glyphicon glyphicon-folder-open"></span>&nbsp; <a href="{{name}}/index.html">{{name}}/</a></td>
			<td>
				{{#issues}}
				<a href="{{name}}/index.html" class="btn btn-danger btn-xs" role="button">
				  Issues <span class="badge">{{issues}}</span>
				</a>
				{{/issues}}

				{{^issues}}
				<a href="{{name}}/index.html" class="btn btn-success btn-xs" role="button">Testable</a>
				{{/issues}}
			</td>
		</tr>
		{{/dirs}}

		{{#files}}
		<tr>
			<td><a href="{{file}}.html">{{file}}</a></td>
			<td>
				{{#untestable}}
				<span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Untestable
				{{/untestable}}
				{{^untestable}}
					{{#issues}}
				<a href="{{file}}.html" class="btn btn-danger btn-xs" role="button">
				  Issues <span class="badge">{{issues}}</span>
				</a>
					{{/issues}}

					{{^issues}}
				<a href="{{file}}.html" class="btn btn-success btn-xs" role="button">Testable</a>
					{{/issues}}
				{{/untestable}}
			</td>
		</tr>
		{{/files}}

	</tbody>
</table>

{{> partials/footer }}
